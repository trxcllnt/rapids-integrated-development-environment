#! /usr/bin/env bash
set -Eeo pipefail;
cd "$(dirname "$(realpath "$0")")";

GHHOSTS="$HOME/.config/gh/hosts.yml";

if [[ ! -f "$GHHOSTS" ]]; then gh auth login; fi

GH_USER="$(grep --color=never 'user:' "$GHHOSTS" | cut -d ':' -f2 | tr -d '[:space:]')";

if [[ -n "$GH_USER" && ! -d "$HOME/rapids/raft" ]]; then
    clone-rmm;
    REPO="$GH_USER/raft";
    FORK="$(gh repo list $GH_USER --fork --json name --jq '. | map(select(.name == "raft")) | map(.name)[]')";
    if [[ ! "$FORK" ]]; then
        ORIGIN_URL="github.com/$GH_USER/raft";
        UPSTREAM_URL="github.com/rapidsai/raft";
        while true; do
            read -p "\`$UPSTREAM_URL\` not found.
Fork \`\` into \`$ORIGIN_URL\` now (y/n)? " CHOICE </dev/tty
            case $CHOICE in
                [Nn]* ) REPO="rapidsai/raft"; break;;
                [Yy]* ) gh repo fork rapidsai/raft --clone=false; break;;
                * ) echo "Please answer 'y' or 'n'";;
            esac
        done;
    fi
    gh repo clone $REPO "$HOME/rapids/raft";
fi
